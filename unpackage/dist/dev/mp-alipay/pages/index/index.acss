


















































































	
/* 轮播 */
.swiper{
	width: 750rpx;
	height: 480rpx;
}
.swiper image{
	width: 100%;
}
/* 信息警告 */
.warn{
  background: #ffcc33;
  font-size: 28rpx;
}
.warn .warn-it{
  width: 750rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 64rpx;
}
.warn .warn-it:first-child{
  border-bottom: 1px solid #f5f5f5;
}
.warn .warn-it .img{
  margin-left: 40rpx;
  width: 48rpx;
  height: 48rpx;
}
.warn .warn-it text{
  margin-left: 20rpx;
  color: #CC0000;
}
/* 信息公告 */
.msg-it{
  height: 130rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #E4E4E4;
  margin-bottom: 2rpx;
}
.msg-it image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.msg-it .text{
  width: 380rpx;
  margin-left: 20rpx;
  color: #CC0000;
}
.msg-it .time{
  margin-left: 20rpx;
  color: #003399;
}

